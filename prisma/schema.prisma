generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}
datasource db {
  provider  = "postgresql"
}

model Employee {
  id              Int              @id @default(autoincrement())
  name        String
  email        String         @unique
  role           Role
  createdAt DateTime   @default(now())
  updatedAt DateTime  @updatedAt
}
enum Role {
  INTERN
  GOV
  ENGINEER
}